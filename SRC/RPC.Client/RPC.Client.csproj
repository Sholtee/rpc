<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Solti.Utils.Rpc.Client</AssemblyName>
    <RootNamespace>Solti.Utils.Rpc</RootNamespace>
  </PropertyGroup>

  <Import Project="..\Common\Common.targets" />

  <ItemGroup>
    <Compile Include="..\Common\AssemblyAttributes.cs" Link="Properties\AssemblyAttributes.cs" />
    <Compile Include="..\Common\RpcResponse.cs" Link="Public\RpcResponse.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.WebUtilities" Version="2.*" />
    <PackageReference Include="ProxyGen.NET" Version="3.*" />
    <PackageReference Include="System.Text.Json" Version="4.*" />
    <PackageReference Include="Solti.Utils.Primitives" Version="1.*" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\RPC.Attributes\RPC.Attributes.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <PropertyGroup>
    <Description>Lightweight client to invoke RPC services built with RPC.NET</Description>
    <PackageId>Solti.Utils.Rpc.Client</PackageId>
  </PropertyGroup>
  
</Project>
